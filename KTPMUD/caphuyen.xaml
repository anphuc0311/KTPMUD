<Window x:Class="KTPMUD.caphuyen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KTPMUD"
        mc:Ignorable="d"
        Title="caphuyen" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="imagee/2.jpg"/>
        </Grid.Background>

        <StackPanel Margin="10">
            <TextBlock Text="Quản trị hệ thống" 
                           Foreground="BlanchedAlmond"
                           FontSize="36" FontWeight="Bold" Margin="200,0,0,20"/>
 
            <Button Content="Truy nhập cấp xã"
                                Margin="80,10,300,0" 
                               Height="50"
                                  FontWeight="Bold" 
                               FontSize="28"
                                Click="truynhapcapxa"
                                />
            <Button Content="Cơ sở sản xuất"
                                Margin="80,10,300,10"
                                Height="50"
                                  FontWeight="Bold" 
                               FontSize="28"
                   Foreground="Black"
                                Click="cososanxuat"
                                />
            <Button Content="Cơ sở lưu trữ"
                                 Margin="80,0,300,10"
                                Height="50"
                                  FontWeight="Bold" 
                               FontSize="28"
                                Click="cosoluutru"
                                />
        </StackPanel>

    </Grid>
</Window>
