<Window x:Class="KTPMUD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KTPMUD"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="imagee/2.jpg"/>
        </Grid.Background>
        <Label Content="Hệ thống quản lý tài nguyên rừng"
               FontSize="30"
               Foreground="BlanchedAlmond"
               FontWeight="Bold"
               Grid.Row="3"
               Grid.RowSpan="5"
               Grid.Column="0"
               Grid.ColumnSpan="8"
               HorizontalAlignment="Center"
               Margin="35"/>
        <StackPanel 
                    Margin="100,100,200,76"
            >
            <Label Content="Quyền truy cập" 
                   FontSize="22"
                      FontWeight="Bold" 
                   Foreground="Azure"
                      Margin="0,0,0,10"/>

            <RadioButton x:Name="rbCapHuyen" 
                             Content="Cấp huyện" 
                         Foreground="Azure"
                         FontSize="22"
                             GroupName="Roles" 
                             Margin="0,10,0,10"/>
            <RadioButton x:Name="rbCapXa" 
                             Content="Cấp xã" 
                         FontSize="22"
                             GroupName="Roles" 
                         Foreground="Azure"
                             Margin="0,10,0,10"/>
            <RadioButton x:Name="rbCoSoGo" 
                             Content="Cơ sở sản xuất gỗ" 
                         FontSize="22"
                             GroupName="Roles" 
                         Foreground="Azure"
                           
                             Margin="0,10,0,10"/>
            <RadioButton x:Name="rbCoSoHatGiong" 
                             Content="Cơ sở sản xuất giống cây" 
                         FontSize="22"
                             GroupName="Roles" 
                         Foreground="Azure"/>

            <RadioButton x:Name="rbCoSoDongVat" 
                    Content="Cơ sở quản lý động vật" 
                    FontSize="22"
                    GroupName="Roles" 
                    Foreground="Azure"
                    Margin="0,10,0,10" />
        </StackPanel>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Center" Margin="0,98,-0.4,8" Width="494" Height="314">
            <Label Content="Đăng nhập"
                   FontWeight="Bold"
                   FontSize="24" Width="300"
                   HorizontalContentAlignment="Center"
                   VerticalAlignment="Center"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="Tên đăng nhập: "
                       FontSize="20"
                       FontWeight="Black"
                       Foreground="Azure"
                       Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,15,0.4,13.6" Grid.RowSpan="2"/>
                <TextBox x:Name="txtUsername"
                         Grid.Row="0" Margin="71.8,13,-235.6,14.6" Grid.RowSpan="2" Grid.Column="1"/>
                <Label Content="Mật khẩu: "
                     Foreground="Azure"
                       FontSize="20"
                       FontWeight="Black"
                       Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="1,34.2,-0.6,-34.4"/>
                <PasswordBox x:Name="txtPassword" Margin="72.8,45.2,-235.6,-32.4" Grid.Column="1" Grid.Row="1"/>
            </Grid>
            <Button x:Name="login" 
                        Content="Đăng nhập" 
                        Click="login_Click_1" 
                        FontSize="14" 
                        FontWeight="Bold" 
                        Background="Green" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Height="32" 
                        Margin="150,50,0,0"
                        MinHeight="30"
                        MaxHeight="150"
                        MaxWidth="150" 
                        MinWidth="80"/>
            <Button x:Name="register" 
                        Content="Đăng ký" 
                        Click="register_Click" 
                        FontSize="14" 
                        FontWeight="Bold" 
                        Background="Gray" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Height="32" 
                        Margin="150,10,0,0"
                        MinHeight="30"
                        MaxHeight="150"
                        MaxWidth="150" 
                        MinWidth="80"/>
            <Button x:Name="forgotPassword"
                    Content="Quên mật khẩu?"
                    Click="forgotPassword_Click"
                    Background="Transparent"
                    Foreground="Blue"
                    FontSize="14"
                    FontWeight="Bold"
                    Height="32"
                    Margin="250,20,0,0"
                    BorderThickness="0" 
            
                    
                    />
            <Button x:Name="changePassword"
                    Content="Đổi mật khẩu"
                    Click="changePassword_Click"
                    Background="Transparent"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    Height="32"
                    Margin="250,0,0,0"
                    BorderThickness="0" 
            />
        </StackPanel>
    </Grid>
</Window>