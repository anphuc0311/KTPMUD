<Window x:Class="KTPMUD.themdv"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KTPMUD"
        mc:Ignorable="d"
        Title="themdv" Height="450" Width="400">
    <Grid>
        <Label Content="Tên Động Vật" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox x:Name="txtTenDongVat" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,20,0,0"/>

        <Label Content="Loại Động Vật" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,60,0,0"/>
        <TextBox x:Name="txtLoaiDongVat" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,60,0,0"/>

        <Label Content="Số Lượng" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,100,0,0"/>
        <TextBox x:Name="txtSoLuong" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,100,0,0"/>

        <Label Content="Cơ Sở Lưu Trữ" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,140,0,0"/>
        <TextBox x:Name="txtCoSoLuuTru" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,140,0,0"/>

        <Label Content="Biến Động" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,180,0,0"/>
        <TextBox x:Name="txtBienDong" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,180,0,0"/>

        <Label Content="Thống Kê Tháng" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,220,0,0"/>
        <TextBox x:Name="txtThongKeThang" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,220,0,0"/>

        <Label Content="Thống Kê Quý" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,260,0,0"/>
        <TextBox x:Name="txtThongKeQuy" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,260,0,0"/>

        <Label Content="Thống Kê Năm" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,300,0,0"/>
        <TextBox x:Name="txtThongKeNam" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,300,0,0"/>

        <Button x:Name="btnThem" Content="Thêm" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="30" Margin="120,340,0,0" Click="btnThem_Click"/>
        <Button x:Name="btnHuy" Content="Hủy" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="30" Margin="210,340,0,0" Click="btnHuy_Click"/>
    </Grid>
</Window>